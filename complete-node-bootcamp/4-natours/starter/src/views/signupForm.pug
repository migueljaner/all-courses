extends base

block append head 
    title Natours | Sign up

block content
    main.main
        .signup-form
            h2.heading-secondary.ma-bt-lg Sign up for your account
            form.form.signup-form
                .form__group
                    label.form__label(for='name') Name
                    input#email.form__input(type='name', placeholder='Your Name', name='name', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', name='email', required)
                .form__group
                    label.form__label(for='password') Password
                    input#password.form__input(type='password',name='password' placeholder='••••••••', required, minlength='8')
                .form__group.ma-bt-md
                    label.form__label(for='passwordConfirm')  Confirm password
                    input#email.form__input(type='password', placeholder='••••••••', name='passwordConfirm', required)
                .form__group
                    button.btn.btn--green Register