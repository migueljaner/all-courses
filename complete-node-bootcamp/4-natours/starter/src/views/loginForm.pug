extends base

block append head 
    title Natours | Log into your account

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Log into your account
            form.form.login-form
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', name='email', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password',name='password' placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green Login